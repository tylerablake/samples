<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Developer Univeristy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Developer University", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <div class="col-md-offset-6">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-right: 10px;">
                                    Demos
                                </button>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Calendar", "Index", "Event")</li>
                                    <li>@Html.ActionLink("Partial Views", "PartialExample", "Home")</li>
                                    <li>@Html.ActionLink("DocumentManagement", "DocumentManagement", "Home")</li>
                                    <li>@Html.ActionLink("Contact Form", "Contact", "Home")</li>
                                    <li>@Html.ActionLink("Cascading Dropdowns", "CascadingDropdownExample", "Home")</li>
                                    <li>@Html.ActionLink("Styling Examples", "StylingExamples", "Home")</li>                                    
                                    <li>@Html.ActionLink("How to Merge Conflicts", "MergingConflicts", "Home")</li>
                                    <li>@Html.ActionLink("What are migrations?", "AboutMigrations", "Home")</li>
                                    <li>@Html.ActionLink("Why use Viewmodels?", "ViewModelOverview", "Home")</li>
                                    <li>@Html.ActionLink("User Management", "UserManagement", "Home")</li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-right: 10px;">
                                    Student
                                </button>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Programs", "Index", "Program")</li>
                                    <li>@Html.ActionLink("Campuses", "Index", "Campus")</li>
                                    <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                                </ul>
                            </div>
                        </li>
                        @{
                            if (User.IsInRole("Volunteer"))
                            {
                                <li>
                                    <div class="dropdown">
                                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-right: 10px;">
                                            Volunteer
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Calendar", "Index", "Event")</li>
                                            <li>@Html.ActionLink("Students", "Index", "Student")</li>
                                            <li>@Html.ActionLink("Enrollments", "Index", "Enrollment")</li>
                                            <li>@Html.ActionLink("Absence Management", "Index", "Absence")</li>
                                        </ul>
                                    </div>
                                </li>
                            }}
                        @{
                            if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <div class="dropdown">
                                        <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" style="margin-top: 10px; margin-right: 10px;">
                                            Admin
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>@Html.ActionLink("Students", "Index", "Student")</li>
                                            <li>@Html.ActionLink("Enrollments", "Index", "Enrollment")</li>
                                            <li>@Html.ActionLink("Absence Management", "Index", "Absence")</li>
                                            <li>@Html.ActionLink("User Management", "Index", "UserManagement")</li>
                                        </ul>
                                    </div>
                                </li>


                            }}
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Developer University</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
